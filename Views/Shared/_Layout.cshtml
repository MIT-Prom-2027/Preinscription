<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - preinscription</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/preinscription.styles.css" asp-append-version="true" />
    <script src="~/js/tailwind.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        lemon: '#eff50c',
                        green: '#0dfc0d',
                        blue: '#0808f7',
                        'gray-nurse': '#dde4dd',
                        'mid-gray': '#636374'
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen flex flex-col transition-colors duration-150">
    <header>
        <nav class="flex flex-wrap items-center justify-between bg-white shadow mb-6 px-10 py-3">
            <div class="flex items-center w-full md:w-auto">
                <a class="text-2xl font-bold text-gray-800 group" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class=" flex group-hover:hidden font-extrabold text-4xl">P</span>
                    <span class="w-0 hidden group-hover:flex transition-all duration-200">Preinscription</span>
                </a>
                <button class="ml-auto md:hidden p-2 rounded text-gray-600 hover:bg-gray-100 focus:outline-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
            <div class="hidden md:flex md:flex-row md:items-center w-full md:w-auto mt-2 md:mt-0">
                <ul class="flex flex-col md:flex-row md:space-x-6 w-full md:w-auto font-semibold">
                    <li>
                        <a class="block py-2 px-4 text-gray-700 hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="flex-1 max-w-7xl mx-auto px-20 w-full">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 text-gray-500 text-sm py-4 mt-8">
        <div class="max-w-7xl mx-auto px-4">
            &copy; 2025 - preinscription - <a class="hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
