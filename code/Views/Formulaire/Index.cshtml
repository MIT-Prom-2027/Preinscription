@{
    ViewData["Title"] = "Page d’accueil de MonNouveau";
}


@{
    ViewBag.Title = "Préinscription";
}

@if (ViewBag.Erreur != null)
{
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-md">
        @ViewBag.Erreur
    </div>
}


<div class="min-h-screen flex items-center justify-center  px-4">
  <div class="max-w-md w-full p-6 bg-white rounded-2xl ">
    <div class="max-w-md mx-auto my-10 p-6 bg-white rounded-2xl ">
    <!-- Message d'information important -->
    <div class="mb-6 p-4 bg-red-100 border border-red-300 text-red-800 rounded-lg text-sm">
        ⚠️ Seules les personnes <strong>ayant obtenu leur baccalauréat</strong> peuvent s'inscrire.<br />
        Seules les personnes <strong>possédant un numéro de baccalauréat valide</strong> peuvent se préinscrire.
    </div>

    @if (ViewBag.Erreur != null)
    {
        <div class="mb-4 p-3 bg-red-200 text-red-800 rounded-md">
            @ViewBag.Erreur
        </div>
    }

    <form method="post" asp-controller="Formulaire" asp-action="Index">
        <label for="numeroBacc" class="block text-gray-700 text-sm font-medium mb-2">
            Numéro BACC
        </label>
        <input 
            type="text" 
            name="numero_bacc" 
            id="numeroBacc" 
            placeholder="Ex : 12345678"
            value="@ViewBag.NumeroBacc" 
            class="w-full px-4 py-3 mb-4 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
        />
        <button 
            type="submit"
            class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold py-3 rounded-xl shadow-md hover:shadow-lg hover:scale-105 active:scale-95 transition-all duration-300"
        >
            Vérifier
        </button>
    </form>

   
   @if (ViewBag.InfosBacc != null)
{
    var infos = (dynamic)ViewBag.InfosBacc;
    <div class="mt-6 p-4 bg-green-100 text-green-800 border border-green-300 rounded-lg space-y-2">
        <div>✅ <strong>Numéro BACC :</strong> @infos.NumeroBacc</div>
        <div><strong>Nom :</strong> @infos.Nom</div>
        <div><strong>Série :</strong> @infos.Serie</div>
        <div><strong>Mention :</strong> @infos.Mention</div>
        <div><strong>Année d'obtention :</strong> @infos.Annee</div>
    </div>
}

</div>

</div>

